    <%-header%>
 
    <div id="login" >

        <div id="login-border">

            <p id="login-title">Welcome back!</p>

            <form method="post" id="form-login">

                <div class="div-input">
                    <input type="text" placeholder="login" class="form-input" name="login" required><br>
                </div>
                
                <div class="div-input">    
                    <input type="password" placeholder="password" class="form-input" name="password" required><br>
                </div>

                <!--<a id="login-forget-a" href="./changePassword"><p id="form-login-forget">Forget your password?</p></a>-->

                <div id="form-buttons">
                    <input type="submit" value="Login" class="form-button">
                    <input type="reset" value="Reset" class="form-button">
                </div>
                        
            </form>
        
        </div>

    </div>


